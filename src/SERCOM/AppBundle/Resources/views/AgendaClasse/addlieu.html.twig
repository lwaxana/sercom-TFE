{% extends 'SERCOMAppBundle:Members:index.html.twig' %}

{% block titre %}
    <title>Administration - Lieux de cours</title>
{% endblock %}

{% block well %}
    <div class="well"> <a href="{{ path('sercom_admin') }}"> Administration </a> / Ajouter lieu de cours</div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">Ajouter lieu de cours</div>
                <div class="panel-body">
                    {{ form_start(form, {'attr':{'class':'form-horizontal'}}) }}
                    {{ form_errors(form) }}
                    <div class="form-group">
                        <div class="col-md-3 control-label">
                            {{ form_label(form.name, 'Lieu :') }}
                        </div>
                        <div class="col-md-8">
                            {{ form_widget(form.name , {'attr':{'class':'form-control'}} ) }}
                            {{ form_errors(form.name) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3 control-label">
                            {{ form_label(form.address.street, 'Rue :') }}
                        </div>
                        <div class="col-md-8">
                            {{ form_widget(form.address.street , {'attr':{'class':'form-control'}} ) }}
                            {{ form_errors(form.address.street) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3 control-label">
                            {{ form_label(form.address.number, 'Num√©ro :') }}
                        </div>
                        <div class="col-md-8">
                            {{ form_widget(form.address.number , {'attr':{'class':'form-control'}} ) }}
                            {{ form_errors(form.address.number) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3 control-label">
                            {{ form_label(form.address.city, 'Ville :') }}
                        </div>
                        <div class="col-md-8">
                            {{ form_widget(form.address.city , {'attr':{'class':'form-control'}} ) }}
                            {{ form_errors(form.address.city) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3 control-label">
                            {{ form_label(form.address.postcode, 'Code Postal :') }}
                        </div>
                        <div class="col-md-8">
                            {{ form_widget(form.address.postcode , {'attr':{'class':'form-control'}} ) }}
                            {{ form_errors(form.address.postcode) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3 control-label">
                            {{ form_label(form.address.country, 'Pays :') }}
                        </div>
                        <div class="col-md-8">
                            {{ form_widget(form.address.country , {'attr':{'class':'form-control'}} ) }}
                            {{ form_errors(form.address.country) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-2"></div>
                        <div class="col-md-4">
                            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-md btn-block'}, 'label':'Enregister' }) }}
                        </div>
                        <div class="col-md-4">
                            <a href="{{ path('sercom_admin_agenda_classe_places') }}" class="btn btn-warning btn-block">Retour</a>
                        </div>
                    </div>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}

                </div>
            </div>


        </div>

    </div>

{% endblock %}

