{% extends 'SERCOMAppBundle:Members:index.html.twig' %}

{% block titre %}
    <title>Administration - Lieux de cours</title>
{% endblock %}

{% block well %}
    <div class="well"> <a href="{{ path('sercom_admin') }}"> Administration </a> / Lieux de cours</div>
{% endblock %}

{% block body %}
    <div class="row">
        <table class="table table-hover">
            <thead>
            <tr>
                <td> Nom </td>
                <td> Adresse </td>
                <td> Actions </td>

            </tr>
            </thead>
            <tbody>
            {% if lieux is not empty  %}
            {% for lieu in lieux %}

            <tr>
                <td>{{ lieu.name }}</td>
                <td>{{ lieu.address.street }} {{ lieu.address.number }} - {{ lieu.address.postcode }} {{ lieu.address.city }} - {{ lieu.address.country.name }}</td>
                <td>
                    <a href="{{ path('sercom_admin_agenda_classe_places_modify', {'id': lieu.placeid}) }}" title="modifier"><i class="fa fa-gear fa-2x"></i> </a>
                    <a href="{{ path('sercom_admin_agenda_classe_places_del', {'id': lieu.placeid}) }}" title="Supprimer"><i class="fa fa-trash fa-2x"></i></a>
                </td>
            </tr>
            {% endfor %}
            {% else %}
                <td> Pas de lieux de cours enregistr√©s</td>
                <td></td>
                <td></td>
            {% endif %}
            </tbody>
        </table>
        <a href="{{ path('sercom_admin_agenda_classe_places_add') }}" class="btn btn-primary "> <i class="fa fa-plus"></i> Ajouter lieu</a></td>
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-3">
                <a href="{{ path('sercom_admin_agenda_classes') }}" class="btn-block btn-warning btn">Retour</a>
            </div>
        </div>



    </div>

{% endblock %}

