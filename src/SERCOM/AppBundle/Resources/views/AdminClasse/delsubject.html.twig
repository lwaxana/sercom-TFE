{% extends 'SERCOMAppBundle:Members:index.html.twig' %}

{% block titre %}
    <title>Ajouter une classe</title>
{% endblock %}

{% block well %}
    <div class="well">     Supprimer une matière      </div>
{% endblock %}

{% block body %}
    {% if subjects is not empty %}
        <table class="table table-hover">
            <thead>
            <tr>
                <td> Nom </td>
                <td> Actions</td>

            </tr>
            </thead>
            <tbody>
            {% for s in subjects %}
                <tr>
                    <td> {{ s.name }}</td>
                    <td>
                        <a href="{{ path('sercom_admin_del_subject', {'id': s.subjectid}) }}" title="Supprimer" onClick="return confirm('Confirmer suppression')"><i class="fa fa-trash fa-2x"></i></a>
                    </td>

                </tr>
            {% endfor %}



            </tbody>
        </table>

    {% else %}
        Pas de matières à supprimer
    {% endif %}

    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-3">
            <a href="{{ path('sercom_admin_classes') }}" class="btn-block btn-warning btn">Retour</a>
        </div>
    </div>
{% endblock %}

