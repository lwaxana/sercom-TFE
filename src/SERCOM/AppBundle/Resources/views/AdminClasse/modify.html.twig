{% extends 'SERCOMAppBundle:Members:index.html.twig' %}

{% block style %}
    <link rel="stylesheet" href="{{ asset('bundles/AppBundle/css/chosen.css') }}"/>
    <script type="text/javascript" src="{{ asset('bundles/AppBundle/js/chosen.jquery.min.js') }}"></script>
{% endblock %}


{% block titre %}
    <title>Modification classe</title>
{% endblock %}

{% block well %}
    <div class="well"> <a href="{{ path('sercom_admin') }}">Administration </a> / <a href="{{ path('sercom_admin_classes') }}"> Classes </a> / Modifier une classe      </div>
{% endblock %}

{% block body %}

    <div class="row" >
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="panel panel-primary" style="height: auto;" >
                <div class="panel-heading">Modifier la classe</div>
                <div class="panel-body" >
                    {{ form_start(form, {'attr':{'class':'form-horizontal'}}) }}
                    {{ form_errors(form) }}
                    <div class="form-group">
                        <div class="col-md-3 control-label">
                            {{ form_label(form.name, 'Nom de la classe :') }}
                        </div>
                        <div class="col-md-8">
                            {{ form_widget(form.name , {'attr':{'class':'form-control'}} ) }}
                            {{ form_errors(form.name) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3 control-label">
                            {{ form_label(form.suject, 'Mati√®re :') }}
                        </div>
                        <div class="col-md-8">
                            {{ form_widget(form.suject , {'attr':{'class':'form-control'}} ) }}
                            {{ form_errors(form.suject) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3 control-label">
                            {{ form_label(form.teacher, 'Professeur :') }}
                        </div>
                        <div class="col-md-8">
                            {{ form_widget(form.teacher , {'attr':{'class':'form-control'}} ) }}
                            {{ form_errors(form.teacher) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3 control-label">
                            {{ form_label(form.students, 'Etudiants :') }}
                        </div>
                        <div class="col-md-8">
                            {% for ets in form.students|batch(2) %}
                            {% for e in ets %}
                            <div class="form-group">
                                <div class="col-sm-6">
                                    <div class="checkbox">
                                        <div class="col-sm-8">
                                            {{ form_label(e) }}
                                        </div>
                                        {{ form_widget(e) }}
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        </div>

                        {% endfor %}
                        {{ form_errors(form.students) }}



                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-md btn-block'}, 'label':'Enregister' }) }}
                    </div>
                    <div class="col-md-4">
                        <a href="{{ path('sercom_admin_classes') }}" class="btn btn-warning btn-block">Retour</a>
                    </div>
                </div>
                {{ form_rest(form) }}
                {{ form_end(form) }}

            </div>
        </div>
    </div>
    </div>

{% endblock %}



