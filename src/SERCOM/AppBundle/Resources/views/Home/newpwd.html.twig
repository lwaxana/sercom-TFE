{% extends 'SERCOMAppBundle:Home:base.html.twig' %}
{% block titre %}
    <title>Nouveau mot de passe</title>
{% endblock %}


{% block body %}

    {% for flashMessage in app.session.flashbag.get('succes') %}
        <div class="alert alert-success" role="alert" id="succes" > {{ flashMessage }}</div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-danger" role="alert" id="alert"> {{ flashMessage }}</div>
    {% endfor %}

    <div class="col-md-3"></div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">Changer mon mot de passe</div>
                <div class="panel-body">
                    {{ form_start(form, {'attr':{'class':'form-horizontal'}}) }}
                    {{ form_errors(form) }}
                    <div class="form-group">
                        {{ form_label(form.password.password, "Mot de passe :", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                        {{ form_errors(form.password.password) }}
                        <div class="col-sm-7">
                            {{ form_widget(form.password.password, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <br/>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.password.confirm, "Confirmer :", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                        {{ form_errors(form.password.confirm) }}
                        <div class="col-sm-7">
                            {{ form_widget(form.password.confirm, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4"></div>
                        <div class="col-sm-4">
                            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-md btn-block'}}) }}
                        </div>
                    </div>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <script>
        $('#succes').delay( 5000).toggle("slow");
        $('#alert').delay( 5000).toggle("slow")
    </script>
{% endblock %}
