{% extends '@SERCOMApp/Home/base.html.twig' %}

{% block titre %}
    <title>Contact</title>
{% endblock %}





{% block body %}

    <section class="formulaire">
        <div class="container">
           {{ form_start(form) }}
            {{ form_errors(form) }}
                <h1 class="heading"><span>Contact us using this form</span></h1>
                <p> Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas. Vestibulum tortor quam, feugiat vitae, ultricies eget.</p>
                <fieldset>
                    <div>
                        {{ form_label(form.nom) }}
                        {{ form_widget(form.nom) }}
                    </div>
                    <div>
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email) }}
                    </div>
                    <div>
                       {{ form_widget(form.message) }}
                    </div>

                    <p>
                        {{ form_widget(form.save) }}
                    </p>
                </fieldset>
            {{ form_rest(form)}}
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}