{% extends 'SERCOMAppBundle:Admin:index.html.twig' %}

{% block titre %}
    <title> Administration - Forum </title>
{% endblock %}

{% block well %}
    <div class="well"> <a href="{{ path('sercom_admin') }}">Administration</a> / Forums  </div>
{% endblock %}

{% block body %}

    <table class="table table-hover">
        <thead>
            <tr>
                <td> Forum </td>
                <td> Permission groupe </td>
                <td> Actions </td>

            </tr>
        </thead>
        <tbody>
            {% for forum in forums %}
            <tr>
                <td>{{ forum.name }}</td>
                <td>
                    {% for group in forum.forumgroups %}
                    {{ group.name }}&nbsp;
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('sercom_members_forum_modifygroups', {'id': forum.forumid }) }}" title="Modifier"><span class="fa fa-gear fa-2x"></span></a>
                </td>

            </tr>
            {% endfor %}
            <tr>
                <td>
                    <a href="{{ path('sercom_members_forum_add_forum') }}" class="btn btn-primary"><i class="fa fa-plus"></i> Ajouter forum  </a>
                    <a href="{{ path('sercom_members_forum_delete_forum') }}" class="btn btn-danger"><i class="fa fa-trash"></i> Supprimer forum  </a>
                </td>
                <td>
                    <a href="{{ path('sercom_members_forum_add_group') }}" class="btn btn-primary"><i class="fa fa-plus"></i> Ajouter groupe  </a>
                    <a href="{{ path('sercom_members_forum_delete_groups') }}" class="btn btn-danger" ><i class="fa fa-trash"></i> Supprimer groupe  </a>
                </td>
                <td>

                </td>
            </tr>
        </tbody>
        </table>

    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-3">
            <a href="{{ path('sercom_admin') }}" class="btn-block btn-warning btn">Retour</a>
        </div>
    </div>



{% endblock %}

{% block script %}
    <script>

        $('#succes').delay( 5000).hide(0);
        $('#alert').delay( 5000).hide(0);


    </script>
{% endblock %}

