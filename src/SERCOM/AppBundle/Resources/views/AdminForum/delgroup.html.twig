{% extends 'SERCOMAppBundle:Members:index.html.twig' %}

{% block titre %}
    <title>Supprimer forums</title>
{% endblock %}

{% block well %}
    <div class="well"> <a href="{{ path('sercom_admin') }}')">Administration</a> / <a href="{{ path('sercom_admin_forum') }}">Forums</a> / Supprimer un groupe </div>
{% endblock %}

{% block body %}
    <table class="table table-hover">
        <thead>
        <tr>
            <td> Groupe </td>
            <td> Description</td>
            <td> Actions </td>
        </tr>
        </thead>
        <tbody>
        {% for group in groups %}
            <tr>
                <td>{{ group.name }}</td>
                <td>{{ group.description }}</td>
                <td>
                    <a href="{{ path('sercom_members_forum_del_group', {'id': group.forumgroupid }) }}" title="Supprimer" onClick="return confirm('Confirmer suppression')"><span class="fa fa-trash fa-2x"></span></a>
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <a href="{{ path('sercom_admin_forum') }}" class="btn-warning btn btn-block">Retour</a>
        </div>
    </div>
{% endblock %}

{% block script %}
    <script>

        $('#succes').delay( 5000).hide(0);
        $('#alert').delay( 5000).hide(0);


    </script>
{% endblock %}
