{% extends 'SERCOMAppBundle:Members:index.html.twig' %}

{% block titre %}
    <title>Modifier professeur</title>
{% endblock %}

{% block well %}
    <div class="well">     <a href="{{ path('sercom_admin') }}"> Administration </a> / <a href="{{ path('sercom_admin_teachers') }}"> Liste des professeurs </a> / Modifier professeur    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">Modifier professeur</div>
                <div class="panel-body">
                    {{ form_start(form, {'attr':{'class':'form-horizontal'}}) }}
                    {{ form_errors(form) }}
                    <div class="form-group">

                        <div class="col-md-3 control-label"><b>Mati√®res :</b></div>
                        <div class="col-md-6">
                            {% for grp in form.subjects %}
                                <div class="row">
                                <div class="col-md-9">
                                        {{ form_label(grp) }}
                                    </div>
                                    <div class="col-md-1">
                                        {{ form_widget(grp) }}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2"></div>
                        <div class="col-md-4">
                            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-md btn-block'}, 'label':'Enregister' }) }}
                        </div>
                        <div class="col-md-4">
                            <a href="{{ path('sercom_admin_teachers') }}" class="btn btn-warning btn-block">Retour</a>
                        </div>
                    </div>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}

