{% extends 'SERCOMAppBundle:Members:index.html.twig' %}

{% block titre %}
    <title> Administration - Modifier inscription </title>
{% endblock %}

{% block well %}
    <div class="well"> <a href="{{ path('sercom_admin') }}"> Administration </a> / Modifier Inscription</div>
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">Modifier inscription</div>
                <div class="panel-body">
                    {{ form_start(form, {'attr':{'class':'form-horizontal'}}) }}
                    {{ form_errors(form) }}

                    <div class="form-group">
                        <div class="col-sm-2">
                            {{ form_label(form.lastname, 'Prenom :') }}
                        </div>
                        <div class="col-sm-6">
                            {{ form_widget(form.lastname) }}
                            {{ form_errors(form.lastname) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-2">
                            {{ form_label(form.firstname, 'Nom :') }}
                        </div>
                        <div class="col-sm-2">
                            {{ form_widget(form.firstname) }}
                            {{ form_errors(form.firstname) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-2">
                            {{ form_label(form.email, 'Email :') }}
                        </div>
                        <div class="col-sm-6">
                            {{ form_widget(form.email) }}
                            {{ form_errors(form.email) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-2">
                            {{ form_label(form.username, 'Login :') }}
                        </div>
                        <div class="col-sm-6">
                            {{ form_widget(form.username) }}
                            {{ form_errors(form.username) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3">
                            {{ form_label(form.membre, 'Acces membre :') }}
                        </div>
                        <div class="col-sm-6">
                            {{ form_widget(form.membre) }}
                            {{ form_errors(form.membre) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3">
                            {{ form_label(form.teacher, 'Acces professeur :') }}
                        </div>
                        <div class="col-sm-6">

                            {{ form_widget(form.teacher) }}
                            {{ form_errors(form.teacher) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3">
                            {{ form_label(form.student, 'Acces Ã©tudiant :') }}
                        </div>
                        <div class="col-sm-6">
                            {{ form_widget(form.student) }}
                            {{ form_errors(form.student) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-4">{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-block'}}) }}</div>
                        <div class="col-sm-4"><a href="{{ path('sercom_admin_valider_inscription') }}" class="btn btn-warning btn-block">Retour</a></div>

                    </div>

                    {{ form_rest(form) }}
                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>
    </div>


{% endblock %}